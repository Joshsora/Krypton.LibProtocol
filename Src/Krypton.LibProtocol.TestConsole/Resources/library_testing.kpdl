library library_testing {
    options {
        "namespace" = "Krypton.LibProtocol.Tests";
    }

    declare client_info<client_type> {
        string ipv4;
        uint16 port;
        client_type info;
    }

    declare component_node {
        uint16 id;
        string alias;
        
        uint16 parent_id;
        array<uint16> children;
    }

    declare cluster_info {
        array<this::client_info<this::component_node>> components;
        uint32 uptime;
    }
}
